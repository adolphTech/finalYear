  <table id="appointment-table" class="table  table-responsive   table-striped  table-bordered">
  <thead>
    <tr>
      <th class="fs-6">No</th>
      <th class="fs-6">Appointment Date</th>
      <th class="fs-6">Time</th>
      <th class="fs-6"> Name</th>
      <th class="fs-6"> Contact</th>
       <th>view</th>
    </tr>
  </thead>
  <tbody>
    
    {{#each appointments}}
    <tr>
      <td>{{this.appointmentNumber}}</td>
      <td class="fs-6 text-nowrap">{{this.appointmentDate}}</td>
      <td>{{this.appointmentTime}}</td>
      <td class="fs-6 text-nowrap">{{this.patient.name}}</td>
      <td class="fs-6">{{this.patient.contact}}</td>
      
      <td class="fs-6"><button  class='btn btn-link btn-sm' data-bs-toggle='modal' data-bs-target="#exampleModal"><i class='fa-solid fa-eye'></i></button></td>
       
     
    </tr>
    {{/each}}
  </tbody>
</table>
