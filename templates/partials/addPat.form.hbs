    <div class="container ">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center mb-0">
                            <i class="fas fa-user-plus me-2"></i> Register
                        </h3>
                    </div>
                       <div class="card-body">
                        {{> messages}}



    <form action="/docs/addPat" method="POST">
    <div class="row g-3">
        <div class="col-md-6">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{name}}">
        </div>
        <div class="col-md-6">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{email}}">
        </div>
        <div class="col-md-6">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create Password" value="{{password}}">
        </div>
        
        <div class="col-md-6">
            <label for="contact" class="form-label">Contact</label>
            <input type="tel" id="contact" name="contact" class="form-control" placeholder="Enter your contact" value="{{contact}}">
        </div>
        <div class="col-md-6">
            <label for="dob" class="form-label">Date of Birth</label>
            <input type="date" id="dob" name="dob" class="form-control" placeholder="Select year of birth">
        </div>
        <div class="col-md-6">
            <label for="gender" class="form-label">Gender</label>
            <div class="form-check ">
                <input class="form-check-input" type="radio" name="gender" id="gender-male" value="male">
                <label class="form-check-label" for="gender-male">Male</label>
            </div>
            <div class="form-check ">
                <input class="form-check-input" type="radio" name="gender" id="gender-female" value="female">
                <label class="form-check-label" for="gender-female">Female</label>
            </div>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary" style="background-color: #8b173b;">Submit</button>
        </div>
    </div>
</form>

                    </div>
              </div>
         </div>
      </div>
  </div>