 <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-6">
              <strong>Appointment Number: {{this.appointmentNumber}}</strong>
            </div>

            <div class="col-sm-6">
              <span id="modalAppointmentNumber"></span>
            </div>
           
          </div>
          <div class="row">
            <div class="col-sm-6">
              <strong>Appointment Date:</strong>
            </div>
            <div class="col-sm-6">
              <span id="modalAppointmentDate"></span>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <strong>Appointment Time:</strong>
            </div>
            <div class="col-sm-6">
              <span id="modalAppointmentTime"></span>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <strong>Patient Name:</strong>
            </div>
            <div class="col-sm-6">
              <span id="modalPatientName"></span>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <strong>Patient Email:</strong>
            </div>
            <div class="col-sm-6">
              <span id="modalPatientEmail"></span>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <strong>Patient Contact:</strong>
            </div>
            <div class="col-sm-6">
              <span id="modalPatientContact"></span>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <strong>Doctor Name:</strong>
            </div>
            <div class="col-sm-6">
              <span id="modalDoctorName"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>   


