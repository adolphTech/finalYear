 <div class="modal fade" id="prescModal" tabindex="-1" aria-labelledby="prescModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> Add Prescription {{this.patientId}}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">

          <form action="/presc"method="POST" id="prescForm">
           <div class="mb-3">
             <div class="row">
            <div class="col-sm-6">
              <strong>Patient Name:</strong>
            </div>

            <div class="col-sm-6">
              <span id="modalPatientName"></span>
            </div>
           
          </div>
                </div>
                 <div class="mb-3">
             <div class="row">
            <div class="col-sm-6">

    

              <strong>Patient Id:</strong>
            </div>

            <div class="col-sm-6">
              <span id="modalPatientId"></span>
            </div>
           
          </div>
                </div>
                <div class="mb-3">
                  <label for="medication" class="form-label"><strong>Medication:</strong></label>
                  <input type="text" class="form-control" id="medication" name="medication">
                </div>
                
                <div class="mb-3">
                  <input type="hidden" class="form-control" name="patientId" id="modalPatientIdInput">

                </div>
                <div class="mb-3">
                  <label for="description" class="form-label"><strong>Description:</strong></label>
                 
                  <textarea class="form-control" name="description" id="description" cols="5" rows="5"></textarea>
                </div>

                 <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

               <button type="submit" class="btn btn-primary">Prescribe</button>
                 </div>
          </form>
         
          
        </div>
      </div>
     
        
        
    
    </div>
  </div>
</div>   


