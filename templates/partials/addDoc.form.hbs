    <div class="container ">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center mb-0">
                            <i class="fas fa-user-plus me-2"></i> Register
                        </h3>
                    </div>
                       <div class="card-body">
                        {{> messages}}



    <form action="/docs/register" method="POST">
    <div class="row g-3">
        <div class="col-md-6">
             <label for="name">Name of Doctor</label>
    <input
      type="name"
      id="name"
      name="name"
      class="form-control"
      placeholder="Enter Name"
      value="{{name}}"
    />
        </div>
        <div class="col-md-6">
            <label for="email">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      class="form-control" 
      placeholder="Enter Email"
      value="{{email}}"
    />
        </div>
        
        <div class="col-md-6">
             <label for="phone">Contact</label>
    <input
      type="tel"
      id="phone"
      name="phone"
      class="form-control"
      placeholder="Enter contact"
      value="{{phone}}"
    />
        </div>
        <div class="col-md-6">
          <label for="hospital">Name of Hospital</label>
    <input
      type="text"
      id="hospital"
      name="hospital"
      class="form-control"
      placeholder="Enter Name Of Hospital"
      value="{{hospital}}"
    />
        </div>
        <div class="col-md-6">
           <label for="password">Password</label>
    <input
      type="password"
      id="password"
      name="password"
      class="form-control"
      placeholder="Create Password"
      value="{{password}}"
    />
        </div>

        <div class="col-md-6">
             <label for="password2">Confirm Password</label>
    <input
      type="password"
      id="password2"
      name="password2"
      class="form-control"
      placeholder="Confirm Password"
      value="{{password2}}"
    />
        </div>
        
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary" style="background-color: #8b173b;">Submit</button>
        </div>
    </div>
</form>

                    </div>
              </div>
         </div>
      </div>
  </div>